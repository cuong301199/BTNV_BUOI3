<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập thông tin cá nhân"
        android:textSize="22dp"
        android:textColor="@color/black"
        />
    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit_text"
        android:hint="ten tai khoan"
        android:text="0834572193"
        android:textColor="@color/black"
        android:padding="14dp"
        />
    <EditText
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit_text_red"
        android:hint="Nhập email"
        android:padding="14dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edit_text"
        android:hint="Nhập tên đầy đủ"
        android:padding="14dp" />

    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit_text"
        android:hint="Nhập tên cơ quan"
        android:padding="14dp"
        />
    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit_text"
        android:hint="Nhập mật khẩu"
        android:padding="14dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:allowUndo="false"
        android:background="@drawable/bg_button_blue"
        android:duplicateParentState="false"
        android:text="Tiếp tục"
        android:textColor="@color/white"
        android:textSize="19dp"
        android:textAllCaps="false" />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email của bạn không đúng. Vui lòng nhập lại\nTên của bạn không đúng. Vui lòng nhập lại\nCơ quan của bạn không đúng. Vui lòng nhập lại\nMật khẩu của bạn quá ngắn. Vui lòng nhập lại "
        android:textSize="17dp"
        android:textColor="@color/red"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yêu cầu:\nsố điện thoại và email phải hợp lệ\nMật khẩu tối thiểu là 8 ký tự\nEdittext nào không nhập thì báo lỗi\nNếu không đúng điều kiện sẽ hiển thị lên textView và bachground của edittext sẽ đổi sang màu đỏ"
        android:textSize="14dp"
        android:textColor="@color/black"
        />





</LinearLayout>