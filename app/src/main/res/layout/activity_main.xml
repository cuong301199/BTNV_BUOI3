<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center_horizontal"
    android:padding="25dp"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký tài khoản"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit_text"
        android:hint="ten tai khoan"
        android:padding="14dp"
        />
    <EditText
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit_text_red"
        android:hint="nhap mat khau"
        android:padding="14dp"
        />
    <EditText
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit_text"
        android:hint="nhap lai mat khau"
        android:padding="14dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:allowUndo="false"
        android:background="@drawable/bg_button_blue"
        android:duplicateParentState="false"
        android:text="Tiếp tục"
        android:textColor="@color/white"
        android:textSize="19dp"
        android:textAllCaps="false" />

    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="mat khau khong trung khop"
        android:textSize="15dp"
        android:textColor="@color/red"
        />

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yêu cầu:\nTên tài khoản tối thiểu 6 ký tự và không có dấu cách\nNếu không đúng điều kiện sẽ hiển thị lên TextView và background của edittext sẽ đổi sang màu đỏ "
        android:textColor="@color/black"
        />





</LinearLayout>